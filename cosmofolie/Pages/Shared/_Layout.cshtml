<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - motsion2._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/motsion2._0.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid" id="header">
        <header class="d-flex flex-wrap justify-content-between py-3 mb-5 border-bottom">
            <a href="index.html"
               class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <span id="nsite_orange">Mot</span>
                <span id="nsite_bleu">sion</span>
            </a>

            <ul class="nav nav-pills" id="Nav_item">
                <li class="nav-item">
                    <a asp-page="/Index" class="nav-link">Accueil</a>
                </li>
                <li class="nav-item">
                    <a asp-page="/Astronomie" class="nav-link">Astronomie</a>
                </li>
                <li class="nav-item">
                    <a asp-page="/Exploration" class="nav-link">Exploration</a>
                </li>
                <li class="nav-item">
                    <a asp-page="/A-propos" class="nav-link">A propos</a>
                </li>

            </ul>

            <a asp-page="/login/Login" class="btn me-2 " id="btn_ln_su">Login</a>
            <a asp-page="/Account/Inscription" class="btn me-2 " id="btn_ln_su">Sign-up</a>
        </header>
    </div>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid" id="footer">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top border-white pb-5"
                id="footer">
            <p class="col-md-4 mb-0 text-body-secondary">© 2023 Company, Inc</p>

            <a href="/"
               class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32">
                    <use xlink:href="#bootstrap"></use>
                </svg>
            </a>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 text-body-secondary footer_li">accueil</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 text-body-secondary footer_li">Astronomie</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 text-body-secondary footer_li">Exploration</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 text-body-secondary footer_li">A propos</a>
                </li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>