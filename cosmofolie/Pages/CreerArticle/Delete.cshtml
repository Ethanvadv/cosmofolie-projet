@page
@model cosmofolie.Pages.CreerArticle.DeleteModel
@{
    ViewData["Title"] = "Delete Article";
}

<h1>Delete Article</h1>

<h4>Are you sure you want to delete this article?</h4>
<div>
    <h4>Titre: @Model.Article.Titre</h4>
    <p>Contenu: @Model.Article.Contenu</p>

</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Details" asp-route-id="@Model.Article.Id" class="btn btn-secondary">Cancel</a>
</form>
